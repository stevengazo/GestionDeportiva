<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Eventos</title>
    <script src="~/Content/Site.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="p-1">    
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded rounded-1">
            <a class="navbar-brand" href="#">@Html.ActionLink("Eventos", "Index", "Eventos", null, new { @class = "nav-link text-light" })</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between " id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Tipos Eventos", "Index", "TiposEventos", null, new { @class = "nav-link text-light" })</li>
                    <li class="nav-item">@Html.ActionLink("Login", "Login", "Administradores", null, new { @class = "nav-link text-light" })</li>
                </ul>
                @using (Html.BeginForm("Search", "Eventos", FormMethod.Post, new { @class = "d-flex form-inline gap-1 m-1" }))
                {
                    <input name="EventoNombre" class="form-control mr-sm-2" type="search" placeholder="Evento" aria-label="Search">
                    <button class="btn btn-outline-success bg-light my-2 my-sm-0" type="submit">Search</button>
                }
            </div>
        </nav>        
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
