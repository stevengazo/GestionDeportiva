<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <script src="~/Content/Site.js"></script>
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>

    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="p-1">
    <nav class="navbar navbar-expand-lg navbar-dark bg-black text-light rounded rounded-1 m-0">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">@Html.ActionLink("Eventos", "Index", "Eventos", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Tipos Eventos", "Index", "TiposEventos", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Administradores", "Index", "Administradores", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
        <div>
            @{
                var user = (GestionDeportiva.Models.Administradores)Session["UserProfile"];
                if (user != null)
                {
                    <label>
                        Hola @user.Nombre
                    </label>
                }
            }
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                Página de Administradores - @DateTime.Today.Year.ToString()
            </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
