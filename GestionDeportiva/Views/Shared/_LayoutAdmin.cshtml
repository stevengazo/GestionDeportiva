<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modo Admin - @ViewBag.Title </title>

    <script src="~/Content/Site.js"></script>
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript" src="~/Scripts/umd/popper.js"></script>
    <script type="text/javascript" src="~/Scripts/umd/popper.min.js"></script>

    <script type="text/javascript" src="~/Scripts/popper-utils.js"></script>
    <script type="text/javascript" src="~/Scripts/popper-utils.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>

    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="p-1">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded rounded-1">
        <a class="navbar-brand" href="#">@Html.ActionLink("Eventos", "Index", "Eventos", null, new { @class = "nav-link text-light" })</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between " id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Tipos Eventos", "Index", "TiposEventos", null, new { @class = "nav-link text-light" })</li>
                <li class="nav-item">@Html.ActionLink("Admins", "Index", "Administradores", null, new { @class = "nav-link" })</li>
            </ul>
            <div class="d-inline-flex justify-content-center align-content-center m-1">
                @{
                    var user = (GestionDeportiva.Models.Administradores)Session["UserProfile"];
                    if (user != null)
                    {
                        <div class="d-inline-flex text-light">
                            Hola @user.Nombre | @Html.ActionLink("Salir", "CloseSession", "Administradores", null, new { @class = "nav-link" })
                        </div>
                    }
                }
            </div>
        </div>
    </nav>   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                Página de Administradores - @DateTime.Today.Year.ToString()
            </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>


</html>
