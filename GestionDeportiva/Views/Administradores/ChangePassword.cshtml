@model GestionDeportiva.Models.LoginModel
@{
    ViewBag.Title = "Cambio Contraseña";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Cambio de Contraseña</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="d-flex flex-column">
            <hr />            
            <div class="form-group">
                <label class="control-label col-md-2">
                    Nombre de Usuario
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LoginUser, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.LoginUser, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">
                    Nueva Contraseña
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LoginPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LoginPassword, "", new { @class = "text-danger" })
                    <label class="text-danger">
                        @ViewBag.ErrorMessage
                    </label>
                </div>
            </div>
        </div>                
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}


