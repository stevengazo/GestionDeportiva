@model GestionDeportiva.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container ">

    <!-- Form Login-->
    <div class="container">
        @using (Html.BeginForm(null, null, FormMethod.Post,new { @class= "d-flex flex-column gap-1 justify-content-center" }))
        {
            <h4>Nombre de Usuario</h4>
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2">
                    Nombre de Usuario
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LoginUser, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.LoginUser, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">
                    Contraseña
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LoginPassword, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.LoginPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 ">
                    <input type="submit" value="Iniciar Sesión" class="btn btn-outline-primary" />                    
                </div>
                <div>
                    <label class="text-danger">@ViewBag.ErrorMessage</label>
                </div>
            </div>
        }


    </div>
</div>